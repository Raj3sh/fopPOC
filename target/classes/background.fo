			        <fo:block text-align="center">text for an extra line in the table row</fo:block>
			      </fo:table-cell>
			    </fo:table-row>
		  </fo:table-body>
      </fo:table>
      
      <fo:block space-after.optimum="55pt" />
      
      <fo:block space-before.optimum="15pt" space-after.optimum="15pt">
      	Table 3: row background with font-family="Courier, monospace, Monospaced"
      </fo:block>

      <fo:table font-family="Courier, monospace, Monospaced" border-collapse="collapse" width="11cm">
		  <fo:table-column column-width="3cm"/>
		  <fo:table-column column-width="3cm"/>
		  <fo:table-column column-width="5cm"/>
		
		    <fo:table-body>
		    
			    <fo:table-row background-color="#00a7e5">
			      <fo:table-cell border-color="black" border-style="solid" border-width="1pt">
			        <fo:block text-align="center">R1C1</fo:block>
			      </fo:table-cell>
			      <fo:table-cell border-color="black" border-style="solid" border-width="1pt">
			        <fo:block text-align="center">R1C2</fo:block>
			      </fo:table-cell>
			      <fo:table-cell border-color="black" border-style="solid" border-width="1pt">
			        <fo:block text-align="center">text for an extra line in the table row</fo:block>
			      </fo:table-cell>
			    </fo:table-row>
			    
			    <fo:table-row background-color="#ffffff">
			      <fo:table-cell border-color="black" border-style="solid" border-width="1pt">
			        <fo:block text-align="center">R2C1</fo:block>
			      </fo:table-cell>
			      <fo:table-cell border-color="black" border-style="solid" border-width="1pt">
			        <fo:block text-align="center">R2C2</fo:block>
			      </fo:table-cell>
			      <fo:table-cell border-color="black" border-style="solid" border-width="1pt">
			        <fo:block text-align="center">text for an extra line in the table row</fo:block>
			      </fo:table-cell>
			    </fo:table-row>
		    
		    	<fo:table-row background-color="#00a7e5">
			      <fo:table-cell border-color="black" border-style="solid" border-width="1pt">
			        <fo:block text-align="center">R3C1</fo:block>
			      </fo:table-cell>
			      <fo:table-cell border-color="black" border-style="solid" border-width="1pt">
			        <fo:block text-align="center">R3C2</fo:block>
